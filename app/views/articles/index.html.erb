<h1 class="text-center mt-2">List of articles</h1>

<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center mt-5">
      <div class="col-8">
        <div class="card text-center shadow mb-5 bg-body rounded">
          <div class="card-header fst-italic" >
            <%= link_to article.title, article_path(article), class: "text-decoration-none text-black" %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(article.created_at) %> ago,
            edited ago <%= time_ago_in_words(article.updated_at) %> ago
            </small>
          </div>
      </div>
      </div>
    </div>
  <% end %>
</div>
